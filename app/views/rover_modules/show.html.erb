<h1>Rover Pics</h1>

<div class="row picture-area">
  <% @module_data.each do |picture| %>
    <div class="col s3 offset-s1">
      <img src="<%= picture %>" style="width:100%;height:100%;"/>
    </div>
  <% end %>
</div>
<div class="row">
  <div class="col s4 offset-s4">
    <% if has_more_pictures(@module_data.length) %>
      <%= button_to "Show More", more_pictures_path(@rover_module), class: "waves-effect waves-light btn-large", method: :put, remote: true, params: { page: page_number(@module_data.length), id: @rover_module.id } %>
    <% end %>
  </div>
</div>
