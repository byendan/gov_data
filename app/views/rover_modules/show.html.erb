<h1>Rover Pics</h1>

<div class="row picture-area">
  <% @pictures.each do |picture| %>
    <div class="col s3 offset-s1">
      <img src="<%= picture %>" style="width:100%;height:100%;"/>
    </div>
  <% end %>
</div>
<div class="row">
  <div class="col s1 offset-s5">
    <%= button_to "Prev", get_prev_page_path(format: :js), method: :put, remote: true, params: { id: @rover_module.id } %>
  </div>
  <div class="col s1">
    <%= button_to "Next", get_next_page_path(format: :js), method: :put, remote: true, params: { id: @rover_module.id, format: "js" } %>
  </div>

  <div class="col s4 offset-s4">
    <% if has_more_pictures(@rover_module.picture_count) %>
      <%= button_to "Show More", more_pictures_path(@rover_module), class: "waves-effect waves-light btn-large", method: :put, remote: true, params: { id: @rover_module.id } %>
    <% end %>
  </div>
</div>
